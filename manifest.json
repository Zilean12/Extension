{
    "manifest_version": 3,
    "name": "Color Changer",
    "version": "1.2.0",
    "description": "Change the background color of any website.",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  
  